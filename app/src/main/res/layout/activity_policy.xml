<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/login_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/policy_title1"
                style="@style/TextHeadingXL"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/policy_title2"
                style="@style/TextHeadingXL"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="48dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/gray_01"
                android:layout_marginBottom="16dp">
                <CheckBox
                    android:id="@+id/checkbox_all"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="24dp"
                    android:layout_gravity="center"
                    android:button="@drawable/custom_checkbox"/>
                <TextView
                    android:id="@+id/text_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accept_all"
                    android:layout_gravity="center"
                    android:textColor="@color/gray_06"
                    style="@style/TextBodyM_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/box_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_background">
                    <LinearLayout
                        android:id="@+id/container_first"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/checkbox_first"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_gravity="center"
                            android:button="@drawable/custom_checkbox_circle"/>
                        <TextView
                            android:id="@+id/text_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/essential"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/gray_08"
                            style="@style/TextBodyM_medium"/>
                        <TextView
                            android:id="@+id/content_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/policy_content1"
                            android:layout_gravity="center"
                            android:textColor="@color/gray_08"
                            style="@style/TextBodyM_medium"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/arrow_first"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_arrow"
                            android:layout_gravity="center"
                            android:rotation="270"
                            app:tint="@color/gray_04"/>
                    </LinearLayout>
                    <ScrollView
                        android:id="@+id/term1_detail_container"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/term_detail1"
                                style="@style/TextBodyS_content" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/box_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_background">
                    <LinearLayout
                        android:id="@+id/container_second"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/checkbox_second"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_gravity="center"
                            android:button="@drawable/custom_checkbox_circle"/>
                        <TextView
                            android:id="@+id/text_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/essential"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/gray_08"
                            style="@style/TextBodyM_medium"/>
                        <TextView
                            android:id="@+id/content_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/policy_content2"
                            android:layout_gravity="center"
                            android:textColor="@color/gray_08"
                            style="@style/TextBodyM_medium"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/arrow_second"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_arrow"
                            android:layout_gravity="center"
                            android:rotation="270"
                            app:tint="@color/gray_04"/>
                    </LinearLayout>
                    <ScrollView
                        android:id="@+id/term2_detail_container"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/term_detail2"
                                style="@style/TextBodyS_content" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/box_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_background">
                    <LinearLayout
                        android:id="@+id/container_third"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/checkbox_third"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_gravity="center"
                            android:button="@drawable/custom_checkbox_circle"/>
                        <TextView
                            android:id="@+id/text_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/optional"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/gray_08"
                            style="@style/TextBodyM_medium"/>
                        <TextView
                            android:id="@+id/content_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/term3"
                            android:layout_gravity="center"
                            android:textColor="@color/gray_08"
                            style="@style/TextBodyM_medium"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/arrow_third"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_arrow"
                            android:layout_gravity="center"
                            android:rotation="270"
                            app:tint="@color/gray_04"/>
                    </LinearLayout>
                    <ScrollView
                        android:id="@+id/term3_detail_container"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/term_detail4"
                                style="@style/TextBodyS_content" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_next"
            android:layout_marginBottom="24dp"
            android:text="@string/next"
            style="@style/NextButtonStyle" />
        </LinearLayout>
</LinearLayout>
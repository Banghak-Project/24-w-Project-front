<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_00">

    <include
        android:id="@+id/new_toolbar"
        layout="@layout/new_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginBottom="90dp">
        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue_00">
            <LinearLayout
                android:id="@+id/calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/calendar_header"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="24dp">
                    <ImageView
                        android:id="@+id/left_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_arrow_down" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp">
                        <TextView
                            android:id="@+id/calendar_year_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000"
                            style="@style/TextHeadingL"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/year"
                            android:layout_marginRight="4dp"
                            style="@style/TextHeadingL"/>
                        <TextView
                            android:id="@+id/calendar_month_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            style="@style/TextHeadingL"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month"
                            style="@style/TextHeadingL"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/right_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_arrow_down"
                        android:rotation="180"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/total_spend_container"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month"
                        style="@style/TextHeadingXL"
                        android:textColor="@color/gray_07"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_spend"
                        style="@style/TextHeadingXL"
                        android:textColor="@color/gray_07"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/monthTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00,000,000"
                        style="@style/TextHeadingXXL"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/main"/>

                    <TextView
                        android:id="@+id/monthCurrencyTextView"
                        style="@style/TextHeadingXL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚©"
                        android:textColor="@color/gray_07" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/day_container"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/sun"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/mon"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/tue"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/wed"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/thu"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/fri"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/sat"
                            android:textColor="@color/gray_06"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/history_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|start"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/history_month_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        style="@style/TextHeadingXL"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month"
                        style="@style/TextHeadingXL"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/history_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        style="@style/TextHeadingXL"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        style="@style/TextHeadingXL"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history"
                        style="@style/TextHeadingXL"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:layout_marginRight="8dp"
                            style="@style/TextHeadingXL"
                            android:textColor="@color/gray_07"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_spend"
                            style="@style/TextHeadingXL"
                            android:textColor="@color/gray_07"/>
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/total_spend_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00,000,000"
                            style="@style/TextHeadingXXL"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/main"/>
                        <TextView
                            android:id="@+id/convertedCurrencyTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚©"
                            style="@style/TextHeadingXL"
                            android:textColor="@color/gray_07"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/convertedTotalTextView"
                            style="@style/TextHeadingL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="0000.00" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            style="@style/TextLabelM"
                            android:textColor="@color/gray_06"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/history_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
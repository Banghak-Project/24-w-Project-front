<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/login_toolbar"
            layout="@layout/login_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/currency_container1"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp">
                    <Spinner
                        android:id="@+id/currency_spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:dropDownWidth="72dp"
                        android:dropDownHeight="80dp"
                        android:alpha="0"/>
                    <TextView
                        android:id="@+id/currency_name1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="통화"
                        android:textColor="@color/gray_08"
                        style="@style/TextBodyM_bold"/>
                </FrameLayout>
                <ImageView
                    android:id="@+id/currency_arrow1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_arrow"
                    android:rotation="270"
                    app:tint="@color/gray_05" />
            </LinearLayout>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_change2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"/>
            <LinearLayout
                android:id="@+id/currency_container2"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp">
                    <Spinner
                        android:id="@+id/currency_spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:dropDownWidth="72dp"
                        android:dropDownHeight="80dp"
                        android:alpha="0"/>
                    <TextView
                        android:id="@+id/currency_name2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="통화"
                        android:textColor="@color/gray_08"
                        style="@style/TextBodyM_bold"/>
                </FrameLayout>
                <ImageView
                    android:id="@+id/currency_arrow2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_arrow"
                    android:rotation="270"
                    app:tint="@color/gray_05" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/capturedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="invisible"/>


        <ImageView
            android:id="@+id/off_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_off"
            app:tint="@color/white"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/round_background"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진을 찍어주세요"
                style="@style/TextLabelM"
                android:visibility="visible"/>
            <LinearLayout
                android:id="@+id/new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_name"
                        android:layout_marginRight="4dp"
                        style="@style/TextLabelM"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colon"
                        style="@style/TextLabelM"/>
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_name"
                        style="@style/TextLabelM"
                        android:singleLine="true"
                        android:ellipsize="marquee"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_price"
                        android:layout_marginRight="4dp"
                        style="@style/TextLabelM"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colon"
                        style="@style/TextLabelM"/>
                    <TextView
                        android:id="@+id/product_origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/origin_price"
                        style="@style/TextLabelM"
                        android:singleLine="true"
                        android:ellipsize="marquee"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:layout_marginHorizontal="8dp"
                        style="@style/TextLabelM"/>
                    <TextView
                        android:id="@+id/product_calc_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calc_price"
                        style="@style/TextLabelM"
                        android:singleLine="true"
                        android:ellipsize="marquee"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/textOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 파란색 중앙 버튼 -->
                <FrameLayout
                    android:id="@+id/camera_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_camera" />
                </FrameLayout>

                <!-- 왼쪽 버튼 그룹 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <FrameLayout
                        android:id="@+id/list_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/round_button"
                        android:backgroundTint="@color/white">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_list" />
                    </FrameLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/gallery_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/round_button"
                        android:backgroundTint="@color/white">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_photo"
                            app:tint="@color/main"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- 오른쪽 버튼 -->
                <FrameLayout
                    android:id="@+id/confirm_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_cart"
                        app:tint="@color/main" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

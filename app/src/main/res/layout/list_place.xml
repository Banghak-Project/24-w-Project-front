<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/place_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="쇼핑 장소"
                android:textColor="@color/main"
                style="@style/TextHeadingXXXL"
                android:singleLine="true"
                android:ellipsize="marquee"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="도시/국가"
                    android:maxLength="40"
                    android:textColor="@color/gray_06"
                    style="@style/TextBodyS"
                    android:singleLine="true"
                    android:ellipsize="marquee"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/dot"
                    android:textColor="@color/gray_06"
                    style="@style/TextBodyS"/>
                <TextView
                    android:id="@+id/created_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/gray_06"
                    style="@style/TextBodyS"/>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/date_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/gray_02"
                android:padding="3dp">
                <TextView
                    android:id="@+id/created_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000.00.00"
                    android:textColor="@color/blue_06"
                    style="@style/TextBodyXS"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_delete"
                android:layout_gravity="end"
                app:tint="@color/gray_06"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/total"
            android:textColor="@color/blue_06"
            style="@style/TextBodyXS"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/gray_02">
                <TextView
                    android:id="@+id/gross_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="금액"
                    android:layout_marginEnd="10dp"
                    style="@style/TextBodyM_bold"
                    android:singleLine="true"
                    android:ellipsize="marquee"/>
                <TextView
                    android:id="@+id/currency_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="$"
                    android:textColor="@color/gray_07"
                    style="@style/TextBodyS"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_change"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:gravity="right"
                android:background="@drawable/round_background2">
                <TextView
                    android:id="@+id/gross_payment_converted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="환율계산액"
                    android:textColor="@color/main"
                    style="@style/TextBodyXXL"
                    android:singleLine="true"
                    android:ellipsize="marquee"/>
                <TextView
                    android:id="@+id/currency_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="₩"
                    android:textColor="@color/gray_07"
                    style="@style/TextBodyXL"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
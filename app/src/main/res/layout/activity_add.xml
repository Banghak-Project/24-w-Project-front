<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/login_toolbar"/>

    <LinearLayout
        android:contentDescription="메인 화면"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@color/blue_00">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/input_money"
                    style="@style/TextBodyS"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/currency_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="통화"
                    style="@style/TextBodyS"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/input_field"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="24dp"
                    android:hint="@string/price"
                    android:background="@drawable/round_background"
                    android:textColor="@color/gray_06"
                    style="@style/TextBodyL"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/currency_symbol1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center|right"
                    android:text="₩"
                    android:paddingRight="24dp"
                    android:textColor="@color/gray_05"
                    style="@style/TextBodyL"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count"
                android:layout_gravity="center"
                style="@style/TextHeadingL"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <FrameLayout
                android:id="@+id/button_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/white">
                <ImageView
                    android:id="@+id/rect_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rectangle_unclicked"/>
                <ImageView
                    android:id="@+id/minus_sign"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_minus"/>
            </FrameLayout>
            <TextView
                android:id="@+id/count_text"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/num"
                style="@style/TextHeadingXL"
                android:textColor="@color/main"/>
            <FrameLayout
                android:id="@+id/button_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/white">
                <ImageView
                    android:id="@+id/rect_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rectangle_clicked"/>
                <ImageView
                    android:id="@+id/plus_sign"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_plus"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/output_money"
                    style="@style/TextBodyS"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/currency_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="통화"
                    style="@style/TextBodyS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/round_background">
                <TextView
                    android:id="@+id/changed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/price"
                    style="@style/TextBodyL"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/currency_symbol2"
                    style="@style/TextBodyL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="₩" />
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/button_add"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/round_background"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/main">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_add"
                    android:layout_gravity="center"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"
                    style="@style/TextLabelL"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="vertical"
    android:background="@drawable/round_background"
    android:padding="16dp"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:contentDescription="갯수"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/per_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/blue_06"
                        style="@style/TextBodyS"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textColor="@color/blue_06"
                        style="@style/TextBodyS"/>
                    <TextView
                        android:id="@+id/all_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/blue_06"
                        style="@style/TextBodyS"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상품1"
                        style="@style/TextHeadingXL"
                        android:singleLine="true"
                        android:ellipsize="marquee"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/product_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00시 00분"
                        android:textColor="@color/gray_06"
                        style="@style/TextBodyS"
                        android:singleLine="true"/>
<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginHorizontal="5dp"-->
<!--                        android:text="@string/dot"-->
<!--                        android:textColor="@color/gray_06"-->
<!--                        style="@style/TextBodyS"/>-->
<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="1개"-->
<!--                        android:textColor="@color/gray_06"-->
<!--                        style="@style/TextBodyS"/>-->
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/button_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_change_1"
                app:tint="@color/gray_06"
                android:layout_gravity="end"/>
        </LinearLayout>
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icon_change"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="4dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/blue_00"
                    android:text="000"
                    android:textColor="@color/blue_05"
                    style="@style/TextBodyS"
                    android:singleLine="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/blue_00">
                    <TextView
                        android:id="@+id/origin_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:text="환율계산액"
                        style="@style/TextBodyS"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/currency_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="$"
                        android:textColor="@color/gray_06"
                        style="@style/TextBodyS"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingHorizontal="16dp"
                android:background="@drawable/round_background2">
                <TextView
                    android:id="@+id/converted_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="0000.00"
                    android:textColor="@color/main"
                    style="@style/TextBodyXXL"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/currency_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="₩"
                    android:textColor="@color/gray_06"
                    style="@style/TextBodyXL"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
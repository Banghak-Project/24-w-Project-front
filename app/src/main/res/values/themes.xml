<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MoneyChanger" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>

        <!-- 전체 텍스트 색상 -->
        <item name="android:textColor">@color/gray_09</item>
    </style>

    <style name="CameraButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="NoStyleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_01</item>
        <item name="android:textSize">@dimen/M</item>
    </style>


    <!--텍스트 스타일 정의-->
    <!--heading-->
    <style name="TextHeadingXXXL">
        <item name="android:textSize">@dimen/XXXL</item>
        <item name="android:lineHeight">110sp</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="TextHeadingXXL">
        <item name="android:textSize">@dimen/XXL</item>
        <item name="android:lineHeight">160sp</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="TextHeadingXL">
        <item name="android:textSize">@dimen/XL</item>
        <item name="android:lineHeight">160sp</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="TextHeadingL">
        <item name="android:textSize">@dimen/L</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <!--label-->
    <style name="TextLabelL">
        <item name="android:textSize">@dimen/M</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textFontWeight">600</item>
    </style>
    <style name="TextLabelM">
        <item name="android:textSize">@dimen/S</item>
        <item name="android:lineHeight">110sp</item>
        <item name="android:textFontWeight">700</item>
    </style>
    <style name="TextLabelS">
        <item name="android:textSize">@dimen/S</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <!--paragraph-->
    <style name="TextBodyXXL">
        <item name="android:textSize">@dimen/XL</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextBodyXL">
        <item name="android:textSize">@dimen/L</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextBodyL">
        <item name="android:textSize">@dimen/L</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="TextBodyM_bold">
        <item name="android:textSize">@dimen/M</item>
        <item name="android:lineHeight">160sp</item>
        <item name="android:textFontWeight">600</item>
    </style>
    <style name="TextBodyM_medium">
        <item name="android:textSize">@dimen/M</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextBodyS_deco">
        <item name="android:textSize">@dimen/S</item>
        <item name="android:lineHeight">110sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextBodyS">
        <item name="android:textSize">@dimen/S</item>
        <item name="android:lineHeight">160sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextBodyXS">
        <item name="android:textSize">@dimen/XS</item>
        <item name="android:lineHeight">10sp</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="Theme.MoneyChanger" parent="Base.Theme.MoneyChanger" />
</resources>